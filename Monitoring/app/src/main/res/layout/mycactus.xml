<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.blacksmith.monitoring.MainActivity"
        android:background="#F3E0A7">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10sp"
            android:textSize="15sp"
            android:text="Your cactus"/>

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_below="@id/title1"
            android:layout_margin="30sp"
            android:layout_centerInParent="true"
            android:src="@drawable/status_kaktus"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_status"
            android:layout_marginLeft="15sp"
            android:textSize="20sp"
            android:text="Status       :"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text1"
            android:layout_marginLeft="5sp"
            android:layout_below="@+id/img_status"
            android:textSize="20sp"
            android:text="-"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:text="Humidity  :"
            android:layout_below="@+id/text1"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text2"
            android:layout_marginLeft="9sp"
            android:layout_marginRight="9sp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tv_status"
            android:textSize="20sp"
            android:text="-"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:text="Tips       :"
            android:layout_below="@+id/text2" />

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text3"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tv_humidity"
            android:textSize="20sp"
            android:text="-"
            />

    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
